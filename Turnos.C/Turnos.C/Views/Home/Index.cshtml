@{
    //razor engine (motor razor) ---> con el @ le "indicamos" que el codigo contenido dentro de las {} es c#
    ViewData["Title"] = "Home Page";
}

@if(ViewBag.Mensaje != null)
{
    <div>
        <p class="text-info">@ViewBag.Mensaje</p>
    </div>

}
@if (TempData["Mensaje"] != null)
{
    var mensaje = TempData["Mensaje"].ToString();
    var cantidad = 0;

    if (mensaje.Contains("Se desactivaron"))
    {
        var partes = mensaje.Split(' ');
        int.TryParse(partes[2], out cantidad);
        if (cantidad > 0 || ViewContext.RouteData.Values["controller"].ToString() == "Turnos")
        {
            <div class="alert alert-success">@mensaje</div>
        }
    } else
    {
        <div class="alert alert-warning text-center">
            @TempData["Mensaje"]
        </div>
    }
}
@{
    ViewData["Title"] = "Inicio";
}

<div class="container py-5">
    <div class="text-center mb-5">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="text-center">
                <h1 class="display-4 fw-bold">Bienvenido/a @ViewBag.Nombre a Clínica ORT</h1>
            </div>
        }
        else
        {
            <div class="text-center">
                <h1 class="display-4 fw-bold">Bienvenidos a Clínica ORT</h1>
            </div>
        }
