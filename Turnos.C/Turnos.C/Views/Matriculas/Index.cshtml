@model IEnumerable<Turnos.C.Models.Matricula>

@{
    ViewData["Title"] = "Matrículas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">@ViewData["Title"]</h2>
        @if (User.IsInRole(Config.AdminRolName))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Nueva Matrícula
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No hay matrículas registradas.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.NumeroMatricula)</th>
                        <th>@Html.DisplayNameFor(model => model.Provincia)</th>
                        <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                        <th>@Html.DisplayNameFor(model => model.Profesional)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NumeroMatricula</td>
                            <td>@item.Provincia</td>
                            <td>@item.Tipo</td>
                            <td>@item.Profesional.Apellido</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    @if (User.IsInRole(Config.AdminRolName))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

