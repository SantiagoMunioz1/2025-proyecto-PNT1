@model IEnumerable<Turnos.C.Models.Profesional>

@{
    ViewData["Title"] = "Profesionales";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                @TempData["Mensaje"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <h2 class="text-primary">@ViewData["Title"]</h2>
        @if (!User.IsInRole(Config.PacienteRolName))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Nuevo Profesional
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No hay profesionales registrados.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Prestacion)</th>
                        <th>@Html.DisplayNameFor(model => model.HoraInicio)</th>
                        <th>@Html.DisplayNameFor(model => model.HoraFin)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Prestacion?.Descripcion</td>
                            <td>@item.HoraInicio.ToString(@"hh\:mm")</td>
                            <td>@item.HoraFin.ToString(@"hh\:mm")</td>
                            <td>@item.Email</td>
                            <td>@item.Nombre</td>
                            <td>@item.Apellido</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    @if (User.IsInRole(Config.AdminRolName))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete"
                                           asp-route-id="@item.Id"
                                           asp-route-returnUrl="@Url.Action("Index", "Profesionales")"
                                           class="btn btn-sm btn-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                        <a asp-controller="Turnos" asp-route-returnUrl="Index" asp-action="TurnosPorProfesional" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Ver Turnos">
                                            <i class="bi bi-calendar-check"></i> Turnos
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

