@using Turnos.C.Helpers
@inject SignInManager<Persona> signInManager
@inject UserManager<Persona> userManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Turnos.C</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body class="d-flex flex-column min-vh-100">
    <header class="fixed-top">
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (signInManager.IsSignedIn(User))
                        {
                            @* Admin: ve todo *@
                            if (User.IsInRole(Config.AdminRolName))
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="Personas" asp-action="Index">Personas</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Profesionales" asp-action="Index">Profesionales</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Pacientes" asp-action="Index">Pacientes</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Matriculas" asp-action="Index">Matriculas</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Turnos" asp-action="Index">Turnos</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Prestaciones" asp-action="Index">Prestaciones</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Prestaciones" asp-action="VerPrestaciones">Ver Prestaciones</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Profesionales" asp-action="VerProfesionales">Ver Profesionales</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="ListarRoles">Listar Roles</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Formularios" asp-action="Index">Formularios</a></li>
                            }

                            @* Profesional: solo accede a Pacientes *@
                            else if (User.IsInRole(Config.ProfesionalRolName))
                            {

                                <li class="nav-item"><a class="nav-link" asp-controller="Pacientes" asp-action="Index">Pacientes</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Turnos" asp-action="RegistroDeTurnosPorProfesional">Registro de Turnos</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Turnos" asp-action="ProximosTurnos">Proximos turnos</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Turnos" asp-action="BalanceMensual">Balance</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Formularios" asp-action="Index">Formularios</a></li>

                            }

                            @* Paciente: puede acceder a Profesionales y Turnos *@
                            else if (User.IsInRole(Config.PacienteRolName))
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="Pacientes" asp-action="EditarMiPerfil">Editar mis datos</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Prestaciones" asp-action="VerPrestaciones">Ver Prestaciones</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Profesionales" asp-action="VerProfesionales">Ver Profesionales</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Turnos" asp-action="SeleccionarPrestacion">Sacar turno</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Turnos" asp-action="MisTurnos">Mis Turnos</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Formularios" asp-action="Index">Formularios</a></li>
                            }
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Formularios" asp-action="Index">Formularios</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Prestaciones" asp-action="VerPrestaciones">Ver Prestaciones</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Profesionales" asp-action="VerProfesionales">Ver Profesionales</a></li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (signInManager.IsSignedIn(User))
                        {
                            var user = await userManager.GetUserAsync(User);
                            if (user != null)
                            {
                                var roles = await userManager.GetRolesAsync(user);
                                var rol = roles.FirstOrDefault() ?? "Sin rol";
                                <li class="nav-item"><a class="nav-link">@rol</a></li>
                                <li class="nav-item"><a class="nav-link">@user.UserName</a></li>
                            }
                            else
                            {
                                <li class="nav-item text-danger"><a class="nav-link">Usuario no encontrado</a></li>
                            }

                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="CerrarSesion">Cerrar sesión</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Registrar">Registrarse</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="IniciarSesion">Iniciar sesión</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white py-3 mt-auto border-top">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
            <div class="mb-2 mb-md-0">
                &copy; 2025 - Turnos.C
            </div>
            <div>
                <a asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-none me-3">
                    Política de Privacidad
                </a>
                <a href="/PreCarga/Seed" id="btnPreCarga" class="btn btn-sm btn-outline-info"> <!-- No uso asp-controller ni asp-action para poder handlear el DOM desde el script -->
                    Pre Carga DB
                </a>
            </div>
        </div>
    </footer>
    <!-- Modal genérico de PreCarga -->
    <div class="modal fade" id="modalPreCarga" tabindex="-1" aria-labelledby="modalPreCargaLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalPreCargaLabel">Populando base de datos</h5>
                </div>
                <div class="modal-body text-center">
                    <div class="spinner-border text-info" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-3">Estamos precargando la base de datos. Por favor, esperá...</p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @section Scripts {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const btnPreCarga = document.getElementById("btnPreCarga");
                const modal = new bootstrap.Modal(document.getElementById("modalPreCarga"));

                btnPreCarga.addEventListener("click", function (e) {
                    e.preventDefault();
                    modal.show();

                    setTimeout(() => {
                        window.location.href = btnPreCarga.href;
                    }, 500);
                });
            });
        </script>
    }
</body>
</html>
