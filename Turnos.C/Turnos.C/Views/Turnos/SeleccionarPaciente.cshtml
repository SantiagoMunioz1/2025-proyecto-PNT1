@model Turnos.C.Models.ViewModels.SeleccionarPacienteViewModel

@{
    ViewData["Title"] = "Seleccionar Paciente";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SeleccionarPaciente" method="post">
    <div class="form-group">
        <label asp-for="PacienteId"></label>
        <select asp-for="PacienteId" asp-items="Model.Pacientes" class="form-control"></select>
        <span asp-validation-for="PacienteId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Continuar</button>
</form>
