@model Turnos.C.Models.ViewModels.SeleccionarPrestacion

@{
    ViewData["Title"] = "Sacar turno";
}

<h1>Saca tu turno</h1>

<h4>Selecciona una prestacion</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(ViewBag.Mensaje as string))
        {
            <div class="alert alert-warning">
                @ViewBag.Mensaje
            </div>
        } else
        {
            <form asp-action="SeleccionarPrestacion">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="PrestacionId" class="control-label"></label>
                    <select asp-for="PrestacionId" class="form-control" asp-items="Model.Prestaciones"></select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Siguiente" class="btn btn-primary mt-3" />
                </div>
            </form> 
        }
        
    </div>
</div>

<div>
    <a class="nav-link" asp-controller="Home" asp-action="Index">Volver al inicio</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
